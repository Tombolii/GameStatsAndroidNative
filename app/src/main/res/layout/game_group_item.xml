<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gamesGroup"
            type="de.tomboli.app.model.GamesGroup" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="@dimen/list_item_space_x4"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="@dimen/list_item_space_x6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="@dimen/list_item_space_x2"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="68dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_text_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierAllowsGoneWidgets="true"
            app:barrierDirection="end"
            app:constraint_referenced_ids="guide_start" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_text_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="start"
            app:constraint_referenced_ids="guide_end" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_game_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{gamesGroup.name}"
            android:textAppearance="?textAppearanceBodyLarge"
            android:textColor="?colorOnSurface"
            app:firstBaselineToTopHeight="@dimen/list_item_headline_first_baseline_to_top"
            app:lastBaselineToBottomHeight="@dimen/list_item_headline_last_baseline_to_bottom"
            app:layout_constraintBottom_toTopOf="@+id/txt_member_count"
            app:layout_constraintEnd_toStartOf="@id/barrier_text_end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/barrier_text_start"
            app:layout_constraintTop_toTopOf="@id/guide_top"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Game Group Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_member_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="?colorOnSurfaceVariant"
            app:firstBaselineToTopHeight="@dimen/list_item_supporting_text_first_baseline_to_top"
            app:lastBaselineToBottomHeight="@dimen/list_item_supporting_text_last_baseline_to_bottom"
            app:layout_constraintBottom_toBottomOf="@id/guide_bottom"
            app:layout_constraintEnd_toEndOf="@id/txt_game_name"
            app:layout_constraintStart_toStartOf="@id/txt_game_name"
            app:layout_constraintTop_toBottomOf="@id/txt_game_name"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="5 Spieler" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_settings"
            style="@style/MaterialLists.TrailingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_settings" />

        <LinearLayout
            android:id="@+id/ll_game_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/barrier_text_end"
            app:layout_constraintStart_toEndOf="@id/barrier_text_start"
            app:layout_constraintTop_toBottomOf="@id/guide_bottom" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:dividerThickness="4dp"
            app:dividerColor="?colorSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintStart_toStartOf="@id/guide_start" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>